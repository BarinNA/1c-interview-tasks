// Задача 1 - Чему равны свойства "А" и "В" в обоих структурах

Процедура Задача1()
	
	Стр = Новый Структура;
	Стр.Вставить("А", 1);
	Стр.Вставить("В", 10);

	Стр2 = Стр;

	Стр.А = 30;

	ПересчитатьСтруктуру(Стр2);
	ПересчитатьСтруктуру2(Стр);

КонецПроцедуры

Процедура ПересчитатьСтруктуру(Знач Структура)
		
	Структура.В = 20;

КонецПроцедуры

Процедура ПересчитатьСтруктуру2(Структура)
		
	Структура.А = Структура.А + Структура.В;

КонецПроцедуры

// Задача 2 - Чему будет равна переменная результат в сообщении пользователю

Процедура Задача2()

	а = 1;
	с = 2;
	х = 3;
	
	Если Функция1(а, с) или Функция2(с, х) или Функция3(а, х) Тогда
		Результат = а + с + х;
		Сообщить(Результат);
	КонецЕсли;	
	
КонецПроцедуры	

Функция Функция1(Знач а, Знач с)
	а = а + 1;
	с = 3;
	Возврат Истина;
КонецФункции	

Функция Функция2(Знач с, х)
	с = с - 2;
	х = 1;
	Возврат Истина;
КонецФункции	

Функция Функция3(а, х)
	а = 5;
	х = 1;
	Возврат Истина;
КонецФункции	


// Задача 3 - Что делает данная функция?

Функция Задача3(Объект, ИмяРеквизита)
	
	УИД = Новый УникальныйИдентификатор();

	Стр = Новый Структура;
	Стр.Вставить(ИмяРеквизита, УИД);

	ЗаполнитьЗначенияСвойств(Стр, Объект);

	Возврат Стр[ИмяРеквизита] = УИД;

КонецФункции

// Задача 4 - Провести рефактор кода. Устранить ошибки при наличии. Проверить code style.

Процедура Задача4(СкладОснование, Склад)
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	|	ПоступлениеТоваровУслуг.Ссылка
	|ИЗ
	|	РегистрНакопления.ТоварыНаСкладах.Остатки(, ) КАК ТоварыНаСкладахОстатки
	|	ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.ПоступлениеТоваровУслуг КАК ПоступлениеТоваровУслуг
	|		ПО ТоварыНаСкладахОстатки.Склад = ПоступлениеТоваровУслуг.СкладОрдер
	|ГДЕ
	|	ТоварыНаСкладахОстатки.Склад = &Склад";
	Запрос.УстановитьПараметр("Склад", СкладОснование);
	ТЗ = Запрос.Выполнить().Выгрузить();
	начатьтранзакцию();
	исправитьдокументы(ТЗ,Склад)
	
КонецПроцедуры	

Процедура исправитьдокументы(ТЗ,Склад)
	Для каждого Стр Из тз Цикл
	о = стр.ссылка.получитьОбъект();
	о.склад = склад;
	о.записать();
	Сообщить("По документу - " + Стр.Ссылка + " изменили склад на " + Стр.Ссылка.Склад + " , вид склада - " Стр.Ссылка.Склад.ВидСклада);
	КонецЦикла;
	ЗафиксироватьТранзакцию();
КонецПроцедуры
